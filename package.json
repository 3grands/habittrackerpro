{
  "name": "rest-express",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite --port 5000 --host 0.0.0.0",
    "build": "vite build && cross-env NODE_ENV=production esbuild server/start.ts --bundle --platform=node --format=esm --external:node:* --external:lightningcss --external:*.node --outfile=dist/server.js",
    "start": "node dist/server.js",
    "preview": "vite preview --port=5000",
    "check": "tsc",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "express": "^4.21.2",
    "vite": "^5.4.19",
    "cross-env": "^7.0.3"
  },
  "devDependencies": {
    "esbuild": "^0.25.5",
    "tsx": "^4.19.1",
    "typescript": "5.6.3"
  }
}